{
    "name": "elcodi/currency-bundle",
    "description": "Elcodi Currency Bundle",
    "keywords": ["elcodi", "currency", "ecommerce"],
    "homepage": "https://github.com/elcodi/CurrencyBundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Gonzalo Miguez",
            "email": "mrzard@gmail.com"
        },
        {
            "name": "Marc Morera",
            "email": "yuhu@mmoreram.com"
        },
        {
            "name": "Aldo Chiecchia",
            "email": "zimage@tiscali.it"
        },
        {
            "name": "Symfony Community",
            "homepage": "https://github.com/elcodi/CurrencyBundle/contributors"
        }
    ],
    "require": {
        "php": ">=5.4",
        "doctrine/common": "~2.4",
        "doctrine/orm": "~2.4",

        "symfony/http-kernel": "~2.4",
        "symfony/config": "~2.4",
        "symfony/dependency-injection": "~2.4",
        "symfony/proxy-manager-bridge": "~2.4",
        "ocramius/proxy-manager": "~0.5",
        "mmoreram/simple-doctrine-mapping": "~0.1",

        "elcodi/core-bundle": "~0.3.0",
        "elcodi/currency": "~0.3.0"
    },
    "require-dev": {
        "elcodi/test-common-bundle": "~0.3.0",
        "doctrine/data-fixtures": "~1.0"
    },
    "suggest": {
        "symfony/twig-bundle": "Required if using Twig extensions",
        "elcodi/language-bundle": "Use Elcodi locale provider",
        "guzzle/http": "Required for OpenExchangeRates adapter"
    },
    "autoload": {
        "psr-4": {
            "Elcodi\\Bundle\\CurrencyBundle\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.4-dev"
        }
    }
}
